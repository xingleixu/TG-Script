// 不同类型的条件判断
let num = 0
let str = ""
let bool = false

print("不同类型的条件判断:")
if (num) {
    print("num 为真")
} else {
    print("num 为假")
}

if (str) {
    print("str 为真")
} else {
    print("str 为假")
}

if (bool) {
    print("bool 为真")
} else {
    print("bool 为假")
}